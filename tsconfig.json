        "module": "ES6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "classic",
        "sourceMap": true,
        "outDir": "./pkg/",
        "rootDirs": ["ts-src", "pkg"]
        
    },
    "include": [
        "ts-src/**/*"
    ]
}